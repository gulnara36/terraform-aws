pipeline {
    agent any

    stages {
        
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'git@github.com:gulnara36/terraform-aws.git'
            }
        }
        
         stage('TFInit') {
            steps {
                //terraform initialize
                sh "terraform init"
            }
        }
         stage('TFPlan') {
            steps {
                sh "terraform fmt"
                sh "terraform plan"
            }
        }
        stage('TFApply') {
            steps {
                sh "terraform apply -auto-approve"
            }
        }

        stage('TFdestroy') {
            steps {
                //terraform destroy
                sh "terraform destroy"
            }
        }
      }
    }  
